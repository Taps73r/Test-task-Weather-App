{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2023"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["vite.config.ts", "src/tests/**/*.ts", "src/tests/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
